<p>Posts#show: Find me in app/views/posts/show.html.erb</p>
<hr/>
<h2><%= @post.title %></h1>
<p><small><%= @post.created_at.strftime("%b %d, %Y") %></small></p>
<p><%= @post.body %></p>
<p><strong>Category:</strong> <%= link_to @post.category.name, category_path(:id  => @post.category.id) %></p>
<br />
<p><%= link_to "Edit Post", edit_post_path %> | <%= link_to "Delete Post", @post, data: { confirm: 'Delete? Are you sure?' }, :method => :delete %></p>
<p><%= link_to "Go To All Posts", posts_path %> | <%= link_to "Go To All Categories", categories_path %> </p>