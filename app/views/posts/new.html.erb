<div class="container">

    <h1><strong>Create a new post</strong></h1>
    <br/>
    <%= form_for @post do |f| %>
        <p>
            <%= f.label :title %> <br/>
            <%= f.text_field :title %> <br/>
        </p>
        <p>
            <%= f.label :body%> <br/>
            <%= f.text_area :body %> <br/>
        </p>
        <p>
            <%= f.label :category_id %> <br/>
            <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]} %>
        </p>
        <br/>
        <p>
            <%= f.submit "Create Post" %>
        </p>
    <% end %>
    
</div>