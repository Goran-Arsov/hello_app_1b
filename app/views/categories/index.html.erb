<section class="section">

    <h3><strong>Listing all categories:</strong></h3><br/>
    
     <!-- With columns, no groups needed -->
    <div class="columns is-multiline">
        <% @categories.each do |cat| %>
            <div class="column is-one-third">
                <article class="notification is-success">
                    <p class="has-text-centered"><%= link_to cat.name, cat %></p>
                </article>
            </div>
        <% end %>
    </div>
 
    <button class="button is-medium is-transparent has-text-weight-bold">
        <%= link_to "Create new category", new_category_path %></p>
    </button>

</section> 