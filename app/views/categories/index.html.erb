<div class="container column is-12">
    <h3><strong>Listing the most recent 12 categories:</strong></h3><br/>

    <!-- With columns, no groups needed -->
    <div class="columns is-multiline">
        <% @categories.last(12).each do |cat| %>
            <div class="column is-one-third">
                <article class="notification is-info">
                    <p class="has-text-centered"><%= link_to cat.name, cat %></p>
                </article>
            </div>
        <% end %>
    </div>

    <div class="card">
        <div class="card-content">
            <h5 class="title is-5">Card and fa icons testing<h3>
            <h5 class="subtitle is-5">Subtitle<h3>
        </div>
        <footer class="card-footer">
            <div class="card-footer-item">
                <a href="#" class="button is-success"><i class="fa fa-thumbs-o-up"></i></a>
            </div>
            <div class="card-footer-item">
                <a href="#" class="button"><i class="fa fa-bell"></i></a>
            </div>
            <div class="card-footer-item">
                <a href="#" class="button"><i class="fa fa-gem"></i></a>
            </div>
                <div>
                    <span class="icon">
                        <i class="fas fa-home"></i>
                    </span>
                    <span class="icon has-text-info">
                        <i class="fa fa-info-circle"></i>
                    </span>
                    <span class="icon has-text-success">
                        <i class="fa fa-check-square"></i>
                    </span>
                    <span class="icon has-text-warning">
                        <i class="fa fa-exclamation-triangle"></i>
                    </span>
                    <span class="icon has-text-danger">
                        <i class="fa fa-ban"></i>
                    </span>
                    <span class="icon">
                        <i class="fa fa-atom"></i>
                    </span>
                    <span class="icon has-text-danger">
                        <i class="fab fa-battle-net"></i>
                    </span>
                </div>
            </div>
        </footer>
    </div> <br />

    <button class="button is-medium is-transparent has-text-weight-bold">
        <%= link_to "Create new category", new_category_path %>
    </button>
  
</div> 