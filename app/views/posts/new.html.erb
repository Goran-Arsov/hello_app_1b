<p>posts#new. Find me in app/views/posts/new.html.erb</p>
<hr/>
<h1>Make a new post</h1>
<%= form_for @post do |f| %>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %> <br/>
    </p>
    <p>
        <%= f.label :body%> <br/>
        <%= f.text_area :body %> <br/>
    </p>
    <p>
        <%= f.label :category_id %> <br/>
        <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]} %>
    </p>
    <br/>
    <p>
        <%= f.submit "Create Post" %>
    </p>

<% end %>
<br/>
<p><%= link_to "Go To All Categories", categories_path %> | <%= link_to "Go To All Posts", posts_path %></p>