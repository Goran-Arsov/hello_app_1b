<!DOCTYPE html>
<html>
  <head>
    <title>RailsApp1b</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <% key == 'notice' ? key = "success" : key = "danger" %>
        <div class="message is-<%= key %> has-text-centered is-marginless" id="flashMessage">
          <div class="message-body is-borderless">       
          <%= value %>
          <button class="delete" aria-label="delete" id="deleteFlashMessage"></button>
          </div>
        </div>
    <% end %>

    <%= render "layouts/header" %><br/>

    <main class="container">
      <%= render "layouts/aside_left" %>
      <%= yield %>
    </main>
    
    <section class="section">
        <%= render "layouts/footer" %>
    </section>
    
  </body>
</html>