<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>
<hr />
<h1>Edit post</h1>
<%= form_for @post do |f|%>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %> <br/>
    </p>
    <p>
        <%= f.label :body%> <br/>
        <%= f.text_area :body %> <br/>
    </p>
    <p>
        <%= f.label :category_id %> <br/>
        <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]} %>
    </p>
    <br/>
    <p>
        <%= f.submit "Update Post"%>
    </p>
    <%= link_to "Go Back", post_path %>

<% end %>