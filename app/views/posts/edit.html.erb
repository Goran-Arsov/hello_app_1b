<div class="container">
    <h1><strong>Edit post</strong></h1>
    <br/>
    <%= form_for @post do |f|%>
        <p>
            <%= f.label :title %> <br/>
            <%= f.text_field :title %> <br/>
        </p>
        <p>
            <%= f.label :body%> <br/>
            <%= f.text_area :body %> <br/>
        </p>
        <p>
            <%= f.label :category_id %> <br/>
            <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]} %>
        </p>
        <br/>
        <p>
            <%= f.submit "Update Post"%>
        </p>
        <br/>
        <%= link_to "Go Back", post_path %>

    <% end %>
</div>